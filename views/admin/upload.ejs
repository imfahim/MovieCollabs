<%- contentFor('body') %>
<div class="container">
  <div class="panel panel-default">
  <div class="panel-heading"><center>Movie Upload</center></div>
  <div class="panel-body">
    <form ref='uploadForm' id='uploadForm' action='/admin/upload' method='post' encType="multipart/form-data">
      <div class="form-group">
          <label class="control-label col-sm-2">Title:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="title">
          </div>
        </div>
        <br><br>
      <div class="form-group">
          <label class="control-label col-sm-2">Director:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="director">
          </div>
        </div>
        <br><br>
      <div class="form-group">
          <label class="control-label col-sm-2">Cast:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="cast">
          </div>
        </div>
        <br><br>
      <div class="form-group">
          <label class="control-label col-sm-2">Plot:</label>
          <div class="col-sm-10">
            <textarea row="2" class="form-control" name="plot" ></textarea>
          </div>
      </div>
        <br><br>
      <div class="form-group">
          <label class="control-label col-sm-2">Release Date:</label>
          <div class="col-sm-10">
            <div class="input-append date form_datetime" id="rl_date">
                <input size="16" type="text" value="" name="date">
                <span class="add-on"><i class="icon-th"></i></span>
            </div>
          </div>
        </div>
        <br><br>
        <div class="form-group">
          <label class="control-label col-sm-2">Genre:</label>
          <div class="col-sm-10">
            <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="comedy">Comedy</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="sci-fi">Sci-fi</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="horror">Horror</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="romance">Romance</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="action">Action</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="drama">Drama</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="animation">Animation</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="fantasy">Fantasy</label>
          </div>
          <div class="checkbox-inline">
          <label><input type="checkbox" name="genre" value="mystery">Mystery</label>
          </div>
        </div>
        </div>
        <br><br>
        <div class="form-group">
            <label class="control-label col-sm-2">Poster:</label>
            <div class="col-sm-10">
              <input type="file" name="sampleFile" />
            </div>
          </div>
        <br><br>
        <div class="form-group">
            <label class="control-label col-sm-2">Movie:</label>
            <div class="col-sm-10">
              <input type="file" name="sampleFile2" />
            </div>
          </div>
        <br><br>
        <input type='submit' class="btn btn-primary" value='Upload!' />
    </form>

  </div>
</div>
</div>
<script>
$(document).ready(function() {
    $('#rl_date')
        .datepicker({
            format: 'yyyy-mm-dd',
            startDate: '2001-01-01',
            endDate: '2020-12-31'
        });
        });

</script>
